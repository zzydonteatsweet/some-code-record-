#include<iostream>
#include<cstdio>
#include<algorithm>
#include<cstring>

using namespace std;
const int MAXN=105;
char origin[MAXN];
char target[MAXN];
int sum=0;
int main(){
    //处理输入
    fgets(origin,105,stdin);
    fgets(target,105,stdin);
    
    int len=strlen(origin);
    //统计相邻的两个不同点之间相差的个数
    int k=0;
    int store[5];
    for(int i=0;i<len;i++){
        //判断不同
        if(origin[i]!=target[i]){
            store[k]=i;
            if(k==1){
                sum+=store[1]-store[0];
            }
            k^=1;
            
            
            //计算值
        }
        
        
    }
    
    //输出结果
    printf("%d\n",sum);
}
